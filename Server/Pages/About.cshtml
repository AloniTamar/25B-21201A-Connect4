@page "/about"
@model Server.Pages.AboutModel
@{
    ViewData["Title"] = "About";
}

<div class="container mt-4">
    <div class="row g-4">
        <div class="col-12">
            <h2 class="mb-3">About this project</h2>
            <p class="text-muted mb-4">@Model.Description</p>
        </div>

        <div class="col-12 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Project Summary</h5>
                    <ul class="mb-0">
                        <li><strong>Server:</strong> ASP.NET Core Razor Pages + Web API, EF Core, SQL Server</li>
                        <li><strong>Client:</strong> C# WinForms with GDI+ animations (disc drop, shine)</li>
                        <li><strong>Gameplay:</strong> Human vs. server (server plays legal random moves)</li>
                        <li><strong>Persistence:</strong> Games/moves in SQL Server; local replays in SQLite</li>
                        <li><strong>Replay:</strong> Equal-time playback with identical visuals/colors</li>
                        <li><strong>Queries/Admin:</strong> Players & games lists, counts, groupings, update/delete</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Details</h5>
                    <dl class="row mb-0">
                        <dt class="col-5">Project</dt>
                        <dd class="col-7">@Model.ProjectName</dd>

                        <dt class="col-5">Course</dt>
                        <dd class="col-7">@Model.Course</dd>

                        <dt class="col-5">Authors</dt>
                        <dd class="col-7">
                            @for (int i = 0; i < Model.Authors.Length; i++)
                            {
                                <text>@Model.Authors[i]@(i < Model.Authors.Length - 1 ? ", " : "")</text>
                            }
                        </dd>

                        <dt class="col-5">Repository</dt>
                        <dd class="col-7">
                            <a href="@Model.RepoUrl" target="_blank" rel="noopener">@Model.RepoUrl</a>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
