@page "{id:int}"
@model Server.Pages.Admin.Games.DeleteModel
@{
    ViewData["Title"] = "Delete Game";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Delete Game</h1>
                <p class="mb-0">This action cannot be undone.</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light btn-lg" asp-page="/Games/Index">Back to Games</a>
            </div>
        </div>
    </div>

    @if (Model.Summary is null)
    {
        <div class="glass-card p-3 p-md-4">
            <div class="alert alert-danger mb-0">Game not found.</div>
        </div>
    }
    else
    {
        <div class="glass-card p-3 p-md-4 mb-4">
            <div class="alert alert-warning">
                <strong>Warning:</strong> This will permanently delete game <strong>#@Model.Summary.Id</strong> for player
                <strong>@Model.Summary.PlayerName</strong> (ID @Model.Summary.PlayerId), including
                <strong>@Model.Summary.MovesCount</strong> move(s).
            </div>

            <dl class="row">
                <dt class="col-sm-3">Result</dt>
                <dd class="col-sm-9">@Model.Summary.Result</dd>
                <dt class="col-sm-3">Start</dt>
                <dd class="col-sm-9">@Model.Summary.StartTime.ToString("g")</dd>
                <dt class="col-sm-3">End</dt>
                <dd class="col-sm-9">@(@Model.Summary.EndTime?.ToString("g") ?? "-")</dd>
                <dt class="col-sm-3">Duration (s)</dt>
                <dd class="col-sm-9">@(@Model.Summary.DurationSec?.ToString() ?? "-")</dd>
            </dl>

            <form method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete permanently</button>
                <a asp-page="/Queries/Games/All" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    }

</div>
