@page "{id:int}"
@model Server.Pages.Admin.Players.DeleteModel
@{
    ViewData["Title"] = "Delete Player";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Delete Player</h1>
                <p class="mb-0">This action cannot be undone.</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light btn-lg" asp-page="/Players/Index">Back to Players</a>
            </div>
        </div>
    </div>

    @if (Model.Summary is null)
    {
        <div class="glass-card p-3 p-md-4">
            <div class="alert alert-danger mb-0">Player not found.</div>
        </div>
    }
    else
    {
        <div class="glass-card p-3 p-md-4">
            <div class="alert alert-warning">
                <strong>Warning:</strong> This will permanently delete player <strong>@Model.Summary.Name</strong> (ID @Model.Summary.Id),
                <strong>@Model.Summary.GamesCount</strong> game(s) and <strong>@Model.Summary.MovesCount</strong> move(s).
            </div>
            <form method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete permanently</button>
                <a asp-page="/Queries/Players/Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    }

</div>
