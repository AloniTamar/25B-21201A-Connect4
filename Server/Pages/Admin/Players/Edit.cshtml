@page "{id:int}"
@model Server.Pages.Admin.Players.EditModel
@{
    ViewData["Title"] = "Edit Player";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Edit Player</h1>
                <p class="mb-0">Update player details and save.</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light btn-lg" asp-page="/Players/Index">Back to Players</a>
            </div>
        </div>
    </div>

    <div class="glass-card p-3 p-md-4">
        <form method="post" class="row g-3" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />

            <div class="col-md-3">
                <label asp-for="Input.UniqueNumber" class="form-label"></label>
                <input asp-for="Input.UniqueNumber" class="form-control" type="number" min="1" max="1000" required />
                <span asp-validation-for="Input.UniqueNumber" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Input.FirstName" class="form-label"></label>
                <input asp-for="Input.FirstName" class="form-control" required />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="Input.Phone" class="form-label"></label>
                <input asp-for="Input.Phone" class="form-control" type="tel" inputmode="numeric" pattern="\d{9,10}" minlength="9" maxlength="10" />
                <span class="form-text">Digits only; 9–10 digits.</span>
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Input.Country" class="form-label"></label>
                <input asp-for="Input.Country" class="form-control" required />
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="/Queries/Players/Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
