@page
@{
    ViewData["Title"] = "Games";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Games</h1>
                <p class="mb-0">Browse all games, distinct views, and grouped stats.</p>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-sm-6 col-lg-4">
            <div class="glass-card p-3 p-md-4 h-100">
                <div class="section-title">
                    <div class="icon-circle">
                        <svg viewBox="0 0 24 24" fill="none"><path d="M8 5v14l11-7-11-7Z" fill="#0ea5e9" /></svg>
                    </div>
                    <h2 class="h6 mb-0">Full List</h2>
                </div>
                <p class="mb-3 muted">All games with details (newest first).</p>
                <a class="btn btn-outline-primary w-100" asp-page="/Queries/Games/All">Open</a>
            </div>
        </div>

        <div class="col-sm-6 col-lg-4">
            <div class="glass-card p-3 p-md-4 h-100">
                <div class="section-title">
                    <div class="icon-circle">
                        <svg viewBox="0 0 24 24" fill="none"><path d="M9 11l2 2 4-4M7 7h.01M7 13h.01M7 19h.01M11 7h6M11 13h6M11 19h6" stroke="#22c55e" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /></svg>
                    </div>
                    <h2 class="h6 mb-0">Distinct (one per player)</h2>
                </div>
                <p class="mb-3 muted">Latest game per player by start time.</p>
                <a class="btn btn-outline-primary w-100" asp-page="/Queries/Games/Distinct">Open</a>
            </div>
        </div>

        <div class="col-sm-6 col-lg-4">
            <div class="glass-card p-3 p-md-4 h-100">
                <div class="section-title">
                    <div class="icon-circle">
                        <svg viewBox="0 0 24 24" fill="none"><path d="M5 12h14M12 5v14" stroke="#6366f1" stroke-width="2" stroke-linecap="round" /></svg>
                    </div>
                    <h2 class="h6 mb-0">Games by Player</h2>
                </div>
                <p class="mb-3 muted">Pick a player to see their games.</p>
                <a class="btn btn-outline-primary w-100" asp-page="/Queries/Games/ByPlayer">Open</a>
            </div>
        </div>

        <div class="col-sm-6 col-lg-4">
            <div class="glass-card p-3 p-md-4 h-100">
                <div class="section-title">
                    <div class="icon-circle">
                        <svg viewBox="0 0 24 24" fill="none"><path d="M9 5h6a4 4 0 0 1 4 4v6a4 4 0 0 1-4 4H9a4 4 0 0 1-4-4V9a4 4 0 0 1 4-4Z" stroke="#0ea5e9" stroke-width="2" /></svg>
                    </div>
                    <h2 class="h6 mb-0">Games per Player</h2>
                </div>
                <p class="mb-3 muted">Counts per player, sorted by count desc.</p>
                <a class="btn btn-outline-primary w-100" asp-page="/Queries/Stats/GamesPerPlayer">Open</a>
            </div>
        </div>

        <div class="col-sm-6 col-lg-4">
            <div class="glass-card p-3 p-md-4 h-100">
                <div class="section-title">
                    <div class="icon-circle">
                        <svg viewBox="0 0 24 24" fill="none"><path d="M4 7a3 3 0 0 1 3-3h6l5 5v8a3 3 0 0 1-3 3H7a3 3 0 0 1-3-3V7Z" stroke="#6366f1" stroke-width="2" /><circle cx="12" cy="14" r="3" stroke="#6366f1" stroke-width="2" /></svg>
                    </div>
                    <h2 class="h6 mb-0">Players by Games</h2>
                </div>
                <p class="mb-3 muted">Grouped into 3+, 2, 1, and 0.</p>
                <a class="btn btn-outline-primary w-100" asp-page="/Queries/Stats/GroupsByGames">Open</a>
            </div>
        </div>
    </div>

</div>
