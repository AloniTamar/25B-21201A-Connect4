@page
@model Server.Pages.Games.NewModel
@{
    ViewData["Title"] = "Start New Game";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Start New Game</h1>
                <p class="mb-0">Create a new game on the server.</p>
            </div>
            <div class="d-flex gap-2">
                <a asp-page="/Index" class="btn btn-light btn-lg">Back to Home</a>
            </div>
        </div>
    </div>

    @if (Model.GameId is int gid && gid > 0)
    {
        <div class="glass-card p-3 p-md-4">
            <div class="alert alert-success mb-3">
                New game created with ID: <strong>@gid</strong>
            </div>
            <div class="d-flex gap-2">
                <a asp-page="/Index" class="btn btn-outline-secondary">Back to Home</a>
            </div>
        </div>
    }
    else
    {
        <div class="glass-card p-3 p-md-4">
            <form method="post" class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Create Game</button>
                <a asp-page="/Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    }

</div>
