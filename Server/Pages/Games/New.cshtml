@page
@model Server.Pages.Games.NewModel
@{
    ViewData["Title"] = "Start New Game";
}

<h2 class="mt-3">Start New Game</h2>
<hr />

@if (Model.GameId is int gid && gid > 0)
{
    <div class="alert alert-success">
        New game created with ID: <strong>@gid</strong>
    </div>

    <div class="d-flex gap-2">
        <a asp-page="/Index" class="btn btn-secondary">Back to Home</a>
        <!-- Placeholder: next steps could add a board page or client link -->
    </div>
}
else
{
    <form method="post">
        <button type="submit" class="btn btn-success">Create Game</button>
        <a asp-page="/Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
}
