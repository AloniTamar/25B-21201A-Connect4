@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    var playerName = TempData.Peek("PlayerName") as string;
    var playerId = TempData.Peek("PlayerId")?.ToString();
}

<div class="mt-3">
    @if (!string.IsNullOrWhiteSpace(playerName))
    {
        <div class="alert alert-success">
            Welcome, <strong>@playerName</strong>! You are now logged in.
        </div>
    }

    <h2>Connect4</h2>
    <p class="text-muted">Register or log in to start a game.</p>

    <div class="d-flex gap-2">
        <a asp-page="/Register" class="btn btn-primary">Register</a>
        <a asp-page="/Login" class="btn btn-outline-primary">Login</a>
        <!-- Placeholder: will wire this in the next steps -->
        <a asp-page="/Games/New" class="btn btn-success">Start New Game</a>
    </div>
</div>
