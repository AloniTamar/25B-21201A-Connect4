@page
@model Server.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}
<div class="container mt-4">
    <h2 class="mb-3">Connect Four</h2>

    @if (Model.IsLoggedIn)
    {
        <div class="alert alert-success">Hello, <strong>@Model.PlayerName</strong>!</div>

        <div class="row g-3">
            <!-- New Game -->
            <div class="col-sm-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Start New Game</h5>
                        <p class="card-text text-muted">We’ll wire this to the WinForms client later.</p>
                        <div class="mt-auto">
                            <a class="btn btn-primary w-100" asp-page="/Games/Index">New Game</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Logout -->
            <div class="col-sm-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Logout</h5>
                        <p class="card-text text-muted">End your current session.</p>
                        <div class="mt-auto">
                            <form method="post" asp-page="/Auth/Logout">
                                <button type="submit" class="btn btn-outline-danger w-100">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-3">
            <!-- Register -->
            <div class="col-sm-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Register</h5>
                        <p class="card-text text-muted">Create a new player (Unique # 1–1000).</p>
                        <div class="mt-auto">
                            <a class="btn btn-primary w-100" asp-page="/Auth/Register">Register</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Login -->
            <div class="col-sm-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Login</h5>
                        <p class="card-text text-muted">Login with your unique number.</p>
                        <div class="mt-auto">
                            <a class="btn btn-outline-primary w-100" asp-page="/Auth/Login">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
