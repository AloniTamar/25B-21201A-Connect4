@page
@model Server.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="mt-3">Login</h2>
<hr />

<form method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-4">
        <label asp-for="Form.UniqueNumber" class="form-label"></label>
        <input asp-for="Form.UniqueNumber" class="form-control" />
        <span asp-validation-for="Form.UniqueNumber" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Login</button>
        <a asp-page="/Register" class="btn btn-outline-secondary">Register</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
