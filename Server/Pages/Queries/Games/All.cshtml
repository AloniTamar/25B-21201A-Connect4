@page
@model Server.Pages.Queries.Games.AllModel
@{
    ViewData["Title"] = "Games — Full Details";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Games — Full Details</h1>
                <p class="mb-0">All games with player, timing, duration, and result.</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light btn-lg" asp-page="/Games/Index">Back to Games</a>
            </div>
        </div>
    </div>

    <div class="glass-card p-3 p-md-4">
        <div class="table-responsive">
            <table class="table table-sm table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>PlayerId</th>
                        <th>Player</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Duration (s)</th>
                        <th>Result</th>
                        <th>Notes</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var g in Model.Items)
                    {
                        <tr>
                            <td>@g.Id</td>
                            <td>@g.PlayerId</td>
                            <td>@g.PlayerName</td>
                            <td>@g.StartTime.ToString("g")</td>
                            <td>@(g.EndTime?.ToString("g") ?? "-")</td>
                            <td>@(g.DurationSec?.ToString() ?? "-")</td>
                            <td>@g.Result</td>
                            <td>@g.Notes</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-danger"
                                   asp-page="/Admin/Games/Delete" asp-route-id="@g.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
