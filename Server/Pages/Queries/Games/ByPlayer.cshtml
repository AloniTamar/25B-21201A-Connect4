@page
@model Server.Pages.Queries.Games.ByPlayerModel
@{
    ViewData["Title"] = "Games by Player";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Games by Player</h1>
                <p class="mb-0">Pick a player to view their games.</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light btn-lg" asp-page="/Games/Index">Back to Games</a>
            </div>
        </div>
    </div>

    <div class="glass-card p-3 p-md-4 mb-4">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-auto">
                <label class="form-label">Player</label>
                <select asp-for="PlayerId" asp-items="Model.PlayerOptions" class="form-select" onchange="this.form.submit()">
                    <option value="">-- choose player --</option>
                </select>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" type="submit">Show</button>
            </div>
        </form>
    </div>

    @if (Model.SelectedPlayerId.HasValue)
    {
        <div class="glass-card p-3 p-md-4">
            <h5 class="mb-3">Player: @Model.PlayerName (@Model.SelectedPlayerId)</h5>

            @if (Model.Items.Count == 0)
            {
                <div class="alert alert-info mb-0">No games for this player.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-sm table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>GameId</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Duration (s)</th>
                                <th>Result</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var g in Model.Items)
                            {
                                <tr>
                                    <td>@g.Id</td>
                                    <td>@g.StartTime.ToString("g")</td>
                                    <td>@(g.EndTime?.ToString("g") ?? "-")</td>
                                    <td>@(g.DurationSec?.ToString() ?? "-")</td>
                                    <td>@g.Result</td>
                                    <td>@g.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    }

</div>
