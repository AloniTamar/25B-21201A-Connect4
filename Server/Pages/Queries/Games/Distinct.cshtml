@page
@model Server.Pages.Queries.Games.DistinctModel
@{
    ViewData["Title"] = "Games – Distinct by Player";
}
<div class="container mt-4">
    <h2>Games – Distinct (one per player, latest)</h2>
    <p class="text-muted">Duplicates are defined as “same player played them”. We keep the latest game per player.</p>

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>GameId</th>
                <th>PlayerId</th>
                <th>Player</th>
                <th>Start</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Items)
            {
                <tr>
                    <td>@r.GameId</td>
                    <td>@r.PlayerId</td>
                    <td>@r.PlayerName</td>
                    <td>@r.StartTime.ToString("g")</td>
                    <td>@r.Result</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mb-3">
        <a class="btn btn-outline-secondary" asp-page="/Games/Index">← Back to Games</a>
    </div>
</div>
