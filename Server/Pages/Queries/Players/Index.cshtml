@page
@model Server.Pages.Queries.Players.IndexModel
@{
    ViewData["Title"] = "Players – Full Details";
    var current = HttpContext.Request.Query["sort"].ToString();
    var nextSort = current == "name_desc" ? "name_asc" : "name_desc";
}

<div class="container mt-4">
    <h2>Players – Full Details (case-insensitive sort)</h2>
    <div class="mb-2">
        <a class="btn btn-sm btn-outline-primary" asp-page="./Index" asp-route-sort="@nextSort">
            Sort by Name (@(current == "name_desc" ? "↑" : "↓"))
        </a>
    </div>

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Unique #</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Country</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Players)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.UniqueNumber</td>
                    <td>@p.FirstName</td>
                    <td>@p.Phone</td>
                    <td>@p.Country</td>
                    <td>@p.CreatedAt.ToString("g")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary"
                           asp-page="/Admin/Players/Edit" asp-route-id="@p.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger ms-1"
                           asp-page="/Admin/Players/Delete" asp-route-id="@p.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mb-3">
        <a class="btn btn-outline-secondary" asp-page="/Players/Index">← Back to Players</a>
    </div>
</div>
