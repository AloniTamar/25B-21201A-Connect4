@page
@model Server.Pages.Queries.Stats.ByCountryModel
@{
    ViewData["Title"] = "Players by Country";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Players by Country</h1>
                <p class="mb-0">Grouped by country; players A–Z. Includes players with 0 games.</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light btn-lg" asp-page="/Players/Index">Back to Players</a>
            </div>
        </div>
    </div>

    @if (!Model.Groups.Any())
    {
        <div class="glass-card p-3 p-md-4">
            <div class="alert alert-info mb-0">No players found.</div>
        </div>
    }
    else
    {
        foreach (var grp in Model.Groups)
        {
            <div class="glass-card p-3 p-md-4 mb-4">
                <div class="section-title">
                    <div class="icon-circle">
                        <svg viewBox="0 0 24 24" fill="none"><path d="M5 3l14 0a2 2 0 0 1 2 2l0 14a2 2 0 0 1-2 2l-14 0a2 2 0 0 1-2-2l0-14a2 2 0 0 1 2-2Z" stroke="#6366f1" stroke-width="2" /><path d="M8 8h8M8 12h8M8 16h5" stroke="#6366f1" stroke-width="2" stroke-linecap="round" /></svg>
                    </div>
                    <h2 class="h6 mb-0">@grp.Country</h2>
                </div>

                @if (!grp.Players.Any())
                {
                    <div class="text-muted">— none —</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-striped align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Player</th>
                                    <th>Phone</th>
                                    <th>Created</th>
                                    <th class="text-end">Games</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in grp.Players)
                                {
                                    <tr>
                                        <td>@p.Name (@p.Id)</td>
                                        <td>@p.Phone</td>
                                        <td>@p.CreatedAt.ToString("g")</td>
                                        <td class="text-end">@p.GamesCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        }
    }

</div>
