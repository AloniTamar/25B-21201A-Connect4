@page
@model Server.Pages.Queries.Stats.ByCountryModel
@{
    ViewData["Title"] = "Players by Country";
}

<div class="container mt-4">
    <h2>Players by Country</h2>
    <p class="text-muted">Grouped by country; players sorted A→Z. Includes players with 0 games.</p>

    @if (!Model.Groups.Any())
    {
        <div class="alert alert-info">No players found.</div>
    }
    else
    {
        @foreach (var grp in Model.Groups)
        {
            <h4 class="mt-4">@grp.Country</h4>
            @if (!grp.Players.Any())
            {
                <div class="text-muted mb-3">— none —</div>
            }
            else
            {
                <table class="table table-striped table-sm w-auto mb-4">
                    <thead>
                        <tr>
                            <th>Player</th>
                            <th>Phone</th>
                            <th>Created</th>
                            <th>Games</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in grp.Players)
                        {
                            <tr>
                                <td>@p.Name (@p.Id)</td>
                                <td>@p.Phone</td>
                                <td>@p.CreatedAt.ToString("g")</td>
                                <td>@p.GamesCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
    }

    <div class="mt-3">
        <a class="btn btn-outline-secondary" asp-page="/Players/Index">← Back to Players</a>
    </div>

</div>
