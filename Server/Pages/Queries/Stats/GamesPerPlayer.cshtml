@page
@model Server.Pages.Queries.Stats.GamesPerPlayerModel
@{
    ViewData["Title"] = "Games per Player";
}
<div class="container mt-4">
    <h2>Games per Player (desc)</h2>
    <table class="table table-striped table-sm w-auto">
        <thead>
            <tr>
                <th>Player</th>
                <th>Games</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Items)
            {
                <tr>
                    <td>@r.Name (@r.PlayerId)</td>
                    <td>@r.GamesCount</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a class="btn btn-outline-secondary" asp-page="/Games/Index">← Back to Games</a>
    </div>
</div>
