@page
@model Server.Pages.Queries.Stats.GamesPerPlayerModel
@{
    ViewData["Title"] = "Games per Player";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Games per Player</h1>
                <p class="mb-0">Sorted by total games (descending).</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light btn-lg" asp-page="/Games/Index">Back to Games</a>
            </div>
        </div>
    </div>

    <div class="glass-card p-3 p-md-4">
        <div class="table-responsive">
            <table class="table table-sm table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Player</th>
                        <th class="text-end">Games</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.Items)
                    {
                        <tr>
                            <td>@r.Name (@r.PlayerId)</td>
                            <td class="text-end">@r.GamesCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
