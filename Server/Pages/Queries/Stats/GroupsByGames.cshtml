@page
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@model Server.Pages.Queries.Stats.GroupsByGamesModel
@{
    ViewData["Title"] = "Players grouped by games played";
}

<div class="container my-4 my-md-5">

    <div class="hero-card mb-4 mb-md-5">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h2 mb-2">Players grouped by games played</h1>
                <p class="mb-0">Grouped into 3+, 2, 1, and 0 games.</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light btn-lg" asp-page="/Games/Index">Back to Games</a>
            </div>
        </div>
    </div>

    <div class="glass-card p-3 p-md-4 mb-4">
        @await Html.PartialAsync("_PlayersTable", Model.G3, new ViewDataDictionary(ViewData) { ["Heading"] = "Three or more games" })
    </div>

    <div class="glass-card p-3 p-md-4 mb-4">
        @await Html.PartialAsync("_PlayersTable", Model.G2, new ViewDataDictionary(ViewData) { ["Heading"] = "Two games" })
    </div>

    <div class="glass-card p-3 p-md-4 mb-4">
        @await Html.PartialAsync("_PlayersTable", Model.G1, new ViewDataDictionary(ViewData) { ["Heading"] = "One game" })
    </div>

    <div class="glass-card p-3 p-md-4">
        @await Html.PartialAsync("_PlayersTable", Model.G0, new ViewDataDictionary(ViewData) { ["Heading"] = "No games" })
    </div>

</div>
