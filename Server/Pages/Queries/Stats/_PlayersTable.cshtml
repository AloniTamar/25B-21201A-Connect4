@model IEnumerable<Server.Pages.Queries.Stats.GroupsByGamesModel.PlayerRow>
@{
    var heading = (string?)ViewData["Heading"] ?? "";
}
<h4 class="mt-4">@heading</h4>

@if (!Model.Any())
{
    <div class="text-muted mb-3">— none —</div>
}
else
{
    <table class="table table-striped table-sm w-auto mb-4">
        <thead>
            <tr>
                <th>Player</th>
                <th>Phone</th>
                <th>Country</th>
                <th>Games</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name (@p.Id)</td>
                    <td>@p.Phone</td>
                    <td>@p.Country</td>
                    <td>@p.GamesCount</td>
                </tr>
            }
        </tbody>
    </table>
}
