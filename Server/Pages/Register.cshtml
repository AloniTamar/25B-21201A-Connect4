@page
@model Server.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="mt-3">Player Registration</h2>
<hr />

<form method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-4">
        <label asp-for="Form.UniqueNumber" class="form-label"></label>
        <input asp-for="Form.UniqueNumber" class="form-control" />
        <span asp-validation-for="Form.UniqueNumber" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Form.FirstName" class="form-label"></label>
        <input asp-for="Form.FirstName" class="form-control" />
        <span asp-validation-for="Form.FirstName" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Form.Phone" class="form-label"></label>
        <input asp-for="Form.Phone" class="form-control" />
        <span asp-validation-for="Form.Phone" class="text-danger"></span>
    </div>6

    <div class="col-md-4">
        <label asp-for="Form.Country" class="form-label"></label>
        <select asp-for="Form.Country" class="form-select"
                asp-items="@(new SelectList(Model.Countries))">
            <option value="">-- select country --</option>
        </select>
        <span asp-validation-for="Form.Country" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Register</button>
        <a asp-page="/Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
